<h2>Welcome <span class="user"><%= @username %></span> !</h2>
<div>
  <table class="table table-striped table-condensed">
    <thead>
      <tr><th><h3>Organizations</h3></th></tr>
    <thead>
    <tbody>
      <% # ユーザーの所属組織のリストを表示 %>
      <% @orgs.each do |org| %>
        <tr><td>
          <h4><%= org %></h4>
        </td></tr>
      <% end %>
    </tbody>
  </table>
</div>
<div>
  <table class="table table-striped table-condensed">
    <thead>
      <tr><th><h3>Repositories</h3></th><tr>
    </thead>
    <tbody>
      <% # ユーザーのレポジトリのリストを表示 %>
      <% # issueを持つもののみリンクを貼る %>
      <% github = Github.new(oauth_token: current_user.access_token) %>
      <% @repos.each do |repo| %>
        <% if github.repos.get(user: repo.owner, repo: repo.name).has_issues %>
          <tr><td>
            <h4><%= link_to "#{repo.owner}/#{repo.name}", "/export/#{repo.owner}/#{repo.name}.csv" %></h4>
          </td></tr>
        <% else %>
          <tr><td>
            <h4><%= "#{repo.owner}/#{repo.name}" %></h4>
          </td></tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
